APP_BASE_URL=https://www.mantisafrica.com
CLIENT_URL=https://www.mantisafrica.com
ALLOWED_ORIGINS=https://www.mantisafrica.com,https://mantisafrica.com
# Optional: set cookie domain explicitly for cross-subdomain cookies
COOKIE_DOMAIN=.mantisafrica.com

# Required secrets in production
JWT_SECRET=replace-with-strong-random-string
JWT_REFRESH_SECRET=replace-with-strong-random-string
MONGODB_URI=mongodb+srv://<user>:<password>@<cluster>/<db>?retryWrites=true&w=majority

# Choose ONE provider. For Mailtrap SMTP testing (non-delivery to real inboxes):
# SMTP_HOST=sandbox.smtp.mailtrap.io
# SMTP_PORT=587
# SMTP_USER=<YOUR_MAILTRAP_SMTP_USERNAME>
# SMTP_PASS=<YOUR_MAILTRAP_SMTP_PASSWORD>
# SMTP_FROM="Mantis Africa <no-reply@mantisafrica.com>"

# For production delivery via Mailtrap Email Sending (SMTP - recommended):
# SMTP_HOST=live.smtp.mailtrap.io
# SMTP_PORT=587
# SMTP_USER=apismtp@mailtrap.io
# SMTP_PASS=<YOUR_API_TOKEN>
# SMTP_FROM="Mantis Africa <no-reply@mantisafrica.com>"
#
# Optional fallback: Mailtrap Send API (if SMTP unavailable)
# MAILTRAP_API_TOKEN=<YOUR_MAILTRAP_SEND_API_TOKEN>
# MAILTRAP_FROM_EMAIL=no-reply@mantisafrica.com
# MAILTRAP_FROM_NAME=Mantis Africa

# For production delivery via Resend:
# RESEND_API_KEY=<YOUR_RESEND_API_KEY>
# SMTP_FROM="Mantis Africa <no-reply@mantisafrica.com>"

# For production delivery via SendGrid:
# SENDGRID_API_KEY=<YOUR_SENDGRID_API_KEY>
# SMTP_FROM="Mantis Africa <no-reply@mantisafrica.com>"

# For production delivery via Mailgun:
# MAILGUN_API_KEY=<YOUR_MAILGUN_API_KEY>
# MAILGUN_DOMAIN=mg.your-domain.com
# SMTP_FROM="Mantis Africa <no-reply@mantisafrica.com>"

# (Single brand: Mantis Africa)
# Optionally you may use *_MANTIS suffixed variants instead of the unsuffixed names,
# but multi-brand (XHI) is no longer supported.

# Paynow (required for online card/wallet payments)
# Set these in your hosting environment or in server/.env.production
PAYNOW_INTEGRATION_ID=<YOUR_PAYNOW_INTEGRATION_ID>
PAYNOW_INTEGRATION_KEY=<YOUR_PAYNOW_INTEGRATION_KEY>
# Optional explicit callback URLs; defaults are computed from PUBLIC_BASE_URL/host
# PAYNOW_RESULT_URL=https://www.mantisafrica.com/api/paynow/result
# PAYNOW_RETURN_URL=https://www.mantisafrica.com/api/paynow/return
# If your app sits behind a reverse proxy/CDN, set PUBLIC_BASE_URL to your public origin
# PUBLIC_BASE_URL=https://www.mantisafrica.com


